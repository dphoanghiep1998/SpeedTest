<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingHorizontal="8dp"
            android:theme="@style/ToolBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingVertical="10dp"
                android:paddingEnd="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEED TEST"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imv_vip"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_vip"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imv_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginRight="0dp" />

            <ImageView
                android:id="@+id/imv_delete"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_container_frament"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_main"
            app:layout_constraintBottom_toTopOf="@+id/nav_bottom"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_bottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:animateLayoutChanges="true"
            android:background="@color/background_main"
            android:paddingBottom="8dp"
            app:itemIconTint="@color/custom_color_bottom_nav"
            app:itemTextColor="@color/custom_color_bottom_nav"
            app:itemBackground="@drawable/bottom_nav_tab_background"
            app:labelVisibilityMode="labeled"
            app:itemPaddingTop="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="-65dp"
        android:layout_marginRight="-65dp"
        android:background="@color/background_main"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_speedtest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEEDTEST"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@id/imv_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imv_back" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_remove"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_remove_ads"
                app:layout_constraintTop_toBottomOf="@+id/tv_speedtest">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_crown"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="32dp"
                    android:scaleType="center"
                    android:src="@drawable/img_crown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_removeAdsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="REMOVE ADS"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/imv_crown"
                    app:layout_constraintStart_toEndOf="@id/imv_crown"
                    app:layout_constraintTop_toTopOf="@id/imv_crown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give you a smood experience"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_removeAdsText"
                    app:layout_constraintStart_toStartOf="@id/tv_removeAdsText"
                    app:layout_constraintTop_toBottomOf="@id/tv_removeAdsText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/container_rate"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border_item_drawer"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/container_remove">

                <ImageView
                    android:id="@+id/imv_star"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/imv_star"
                    android:text="Đánh giá ứng dụng"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_share"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border_item_drawer"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/container_rate">

                <ImageView
                    android:id="@+id/imv_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/imv_share"
                    android:text="Chia sẻ ứng dụng"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_policy"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border_item_drawer"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/container_share">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_policy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_policy" />

                <TextView
                    android:id="@+id/tv_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/imv_policy"
                    android:text="Chính sách bảo mật"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_fanpage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border_item_drawer"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/container_policy">

                <ImageView
                    android:id="@+id/imv_fanpage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_vpn" />

                <TextView
                    android:id="@+id/tv_fanpage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/imv_fanpage"
                    android:text="FanPage Speedtest"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_next" />

                <RelativeLayout
                    android:id="@+id/container_other_app"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/border_item_drawer"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_other_app"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/ic_more_app" />

                    <TextView
                        android:id="@+id/tv_other_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/imv_other_app"
                        android:text="Ứng dụng khác"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_next" />

                </RelativeLayout>

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
