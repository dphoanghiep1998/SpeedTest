<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_download_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/infor_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/v_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_downArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_down_arrow" />

                <TextView
                    android:id="@+id/tv_downloadSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imv_downArrow"
                    android:text="Download"
                    android:textColor="#D7D7D7" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_download_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textColor="#d7d7d7" />
        </LinearLayout>

        <View
            android:id="@+id/v_view"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_view"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_upArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_up_arrow" />

                <TextView
                    android:id="@+id/tv_uploadSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imv_upArrow"
                    android:text="Upload"
                    android:textColor="#D7D7D7" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_upload_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textColor="#d7d7d7" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/container_ping_loss_jitter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_download_upload">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_ping"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_up_arrow" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ping"
                android:textColor="#d7d7d7" />

            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/tv_pingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"

                android:textColor="#D7D7D7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_jitter"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_up_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jitter"
                android:textColor="#d7d7d7" />

            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/tv_jitterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#D7D7D7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_loss"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_up_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Loss"
                android:textColor="#d7d7d7" />

            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/lossCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#D7D7D7" />

        </LinearLayout>
    </LinearLayout>

    <com.github.anastr.speedviewlib.PointerSpeedometer
        android:id="@+id/speedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sv_backgroundCircleColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/container_ping_loss_jitter"
        app:sv_speedTextColor="@color/white"
        app:sv_indicatorColor="#ddd"
        app:sv_speedometerColor="@color/white"
        app:sv_speedometerWidth="24dp"
        />
    <TextView
        android:id="@+id/tv_mbps"
        android:text="Mbps"
        android:textColor="#d7d7d7"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/speedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/speedView"
        app:layout_constraintEnd_toEndOf="@id/speedView"/>

    <Button
        android:id="@+id/btn_start_scan"
        app:layout_constraintTop_toBottomOf="@+id/tv_mbps"
        app:layout_constraintStart_toStartOf="@id/tv_mbps"
        app:layout_constraintEnd_toEndOf="@id/tv_mbps"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu ngay"
        android:textColor="@color/black"
        android:paddingVertical="8dp"
        android:paddingHorizontal="64dp"
        android:textSize="18sp"
        android:background="@drawable/button_background_start"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_start_scan"
        app:layout_constraintStart_toStartOf="@id/btn_start_scan"
        app:layout_constraintEnd_toEndOf="@id/btn_start_scan"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <ImageView
            android:id="@+id/imv_wifi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_wifi"
            android:paddingEnd="4dp"
            />
        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_accent"
            android:text="@string/neko"
            android:paddingStart="4dp"
            android:textSize="18sp"
            />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>