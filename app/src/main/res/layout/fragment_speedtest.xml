            <FrameLayout
                android:id="@+id/testBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container_ping_loss_jitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btn_start"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                android:scrollbarFadeDuration="200"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/start_anim" />

                <TextView
                    android:textSize="@dimen/_30ssp"
                    android:id="@+id/tv_go"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="GO"/>
            </FrameLayout>

            <!--            <ImageView-->
            <!--                android:id="@+id/needle"-->
            <!--                android:layout_marginTop="-18dp"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="@dimen/_60sdp"-->
            <!--                android:src="@drawable/ic_needle"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/testBackground"-->
            <!--                app:layout_constraintStart_toStartOf="@id/testBackground"-->
            <!--                app:layout_constraintEnd_toEndOf="@id/testBackground"/>-->

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/testBackground"
                app:layout_constraintStart_toStartOf="@id/testBackground"
                app:layout_constraintTop_toBottomOf="@id/testBackground" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_mbps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:text="Mbps"
                android:textColor="#d7d7d7"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/testBackground"
                app:layout_constraintStart_toStartOf="@id/testBackground"
                app:layout_constraintTop_toBottomOf="@+id/testBackground" />

<!--            <Button-->
<!--                android:id="@+id/btn_start_scan"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:background="@drawable/button_background_start"-->
<!--                android:paddingHorizontal="64dp"-->
<!--                android:paddingVertical="8dp"-->
<!--                android:text="Bắt đầu ngay"-->
