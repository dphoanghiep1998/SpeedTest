<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_download_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/infor_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/v_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_downArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_down_arrow" />

                <TextView
                    android:id="@+id/tv_downloadSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imv_downArrow"
                    android:text="Download"
                    android:textColor="#D7D7D7" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#d7d7d7"
                android:gravity="center"
                android:text="________" />
        </LinearLayout>

        <View
            android:id="@+id/v_view"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_upArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_up_arrow" />

                <TextView
                    android:id="@+id/tv_uploadSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imv_upArrow"
                    android:text="Upload"
                    android:textColor="#D7D7D7" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#d7d7d7"
                android:gravity="center"
                android:text="________" />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:weightSum="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_download_upload"
        android:layout_marginHorizontal="8dp"
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imv_ping"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_up_arrow" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#d7d7d7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ping"/>
            <TextView
                android:textColor="#D7D7D7"
                android:id="@+id/tv_pingCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="------" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imv_jitter"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_up_arrow" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#d7d7d7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jitter"/>
            <TextView
                android:id="@+id/jitterCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D7D7D7"
                android:text="------" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imv_loss"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_up_arrow" />
            <TextView
                android:layout_gravity="center"
                android:textColor="#d7d7d7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loss"/>
            <TextView
                android:id="@+id/lossCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D7D7D7"
                android:text="------" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>