<!--                android:textSize="18sp"-->
<!--                app:layout_constraintEnd_toEndOf="@id/tv_mbps"-->
<!--                app:layout_constraintStart_toStartOf="@id/tv_mbps"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tv_mbps" />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_expand_view"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/background_gradient_config"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_speed_value"
                app:layout_constraintWidth_percent="0.9">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_config"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/imv_wifi"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="16dp"
                            android:paddingEnd="4dp"
                            android:src="@drawable/ic_wifi"
                            app:layout_constraintBottom_toTopOf="@id/imv_global_isp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_wifi_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxWidth="120dp"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:text="@string/neko"
                            android:textColor="@color/text_accent"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@id/imv_wifi"
                            app:layout_constraintStart_toEndOf="@id/imv_wifi"
                            app:layout_constraintTop_toTopOf="@id/imv_wifi" />

                        <ImageView
                            android:id="@+id/imv_global_isp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_global_isp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/imv_wifi"
                            app:layout_constraintTop_toBottomOf="@id/imv_wifi" />

                        <TextView
                            android:id="@+id/tv_isp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="FPT TELECOM"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/imv_global_isp"
                            app:layout_constraintStart_toEndOf="@id/imv_global_isp"
                            app:layout_constraintTop_toTopOf="@id/imv_global_isp" />

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:barrierDirection="end"
                            app:constraint_referenced_ids="tv_isp_name,tv_wifi_name" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/gradient_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/barrier"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_config_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/container_config">

                        <TextView
                            android:id="@+id/tv_mbps_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mbps"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toTopOf="@id/tv_mbps_value"
                            app:layout_constraintEnd_toStartOf="@id/tv_mbps_type"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_mbs_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MB/s"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toStartOf="@id/tv_kbs_type"
                            app:layout_constraintStart_toEndOf="@+id/tv_mbps_type"
                            app:layout_constraintTop_toTopOf="@+id/tv_mbps_type" />

                        <TextView
                            android:id="@+id/tv_kbs_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kb/s"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_mbs_type"
                            app:layout_constraintTop_toTopOf="@+id/tv_mbps_type"

                            />

                        <TextView
                            android:id="@+id/tv_mbps_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/tv_mbps_type"
                            app:layout_constraintStart_toStartOf="@id/tv_mbps_type"
                            app:layout_constraintTop_toBottomOf="@id/tv_mbps_type"

                            />

                        <TextView
                            android:id="@+id/tv_mbs_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/tv_mbs_type"
                            app:layout_constraintStart_toStartOf="@id/tv_mbs_type"
                            app:layout_constraintTop_toBottomOf="@id/tv_mbs_type"

                            />

                        <TextView
                            android:id="@+id/tv_kbs_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/tv_kbs_type"
                            app:layout_constraintStart_toStartOf="@id/tv_kbs_type"
                            app:layout_constraintTop_toBottomOf="@id/tv_kbs_type"

                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>