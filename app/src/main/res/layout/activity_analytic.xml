<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_main"
    tools:context=".AnalyticActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Phân tích Wifi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintEnd_toStartOf="@id/imv_vip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv_vip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_vip"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_infor"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/infor_container"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/imv_wifi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_wifi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout

            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imv_wifi"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/tv_wifi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neko"
                android:textColor="@color/white"
                />


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÙI"
                android:textColor="#FFEB3B"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:id="@+id/tv_signal_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-63 dBm"
            android:textColor="@color/text_accent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Khoảng cách"
        android:textColor="#ddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_infor" />
    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_distance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="6,4m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_distance"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_bssid"
        android:layout_width="84dp"
        android:layout_height="17dp"
        android:text="BSSID"
        android:textColor="#ddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_distance" />
    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_bssid_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="14:2:bc:2e:12:04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bssid"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_channel"
        android:layout_width="84dp"
        android:layout_height="17dp"
        android:text="Kênh"
        android:textColor="#ddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bssid" />
    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_channel_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="36(42)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_channel"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_frequency"
        android:layout_width="84dp"
        android:layout_height="17dp"
        android:text="Tần số"
        android:textColor="#ddd"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_channel" />
    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_frequency_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="5198MHz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_frequency"

        />
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:id="@+id/tv_security_type"
        android:layout_width="84dp"
        android:layout_height="17dp"
        android:text="Bảo mật"
        android:textColor="#ddd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_frequency" />
    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tv_security_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="WPA2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_security_type"

        />

</androidx.constraintlayout.widget.ConstraintLayout>