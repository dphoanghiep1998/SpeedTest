<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginVertical="4dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/infor_container"
        android:weightSum="6"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_connectionType"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_wifi"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/tv_ssid"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="qeqweqwewqq"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/tv_dateScan"
            android:gravity="center"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Aug 18"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeMaxTextSize="18sp"
            android:maxLines="1"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_downloadRate"
            android:gravity="center"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30.04"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_uploadRate"
            android:gravity="center"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="32.67"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_pingRate"
            android:gravity="center"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="34"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_weight="0.2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_next"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>